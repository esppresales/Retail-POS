<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <size
                android:height="50dp"
                android:width="50dp"
                />
            <corners android:radius="20dp"/>

            <solid android:color="#CA3435"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp"
        android:left="1dp"
        >
        <shape android:shape="oval" >
            <solid android:color="#CA3435" />
            <size
                android:height="50dp"
                android:width="50dp"
                />
            <corners android:radius="20dp"/>

        </shape>
    </item>

</layer-list>