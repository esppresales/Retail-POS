<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/overflow_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dropdown_icon_gray"
        />

    <LinearLayout
        android:id="@+id/ListHeading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/overflow_menu"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/header_bar_color_blue" />

            <TextView
                android:id="@+id/heading_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:singleLine="true"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/heading_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/heading_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/heading_last_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Login"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/heading_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:singleLine="true"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>