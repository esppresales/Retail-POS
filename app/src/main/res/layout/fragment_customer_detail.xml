<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/formScroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_bg">

            <RelativeLayout
                android:id="@+id/form"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lin_Left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/full_name" />

                    <TextView
                        android:id="@+id/full_nameET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/membership_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="@string/membership_id" />

                    <TextView
                        android:id="@+id/membership_idET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/mobile_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="@string/mobile_no_customer" />

                    <TextView
                        android:id="@+id/mobile_noET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/date_of_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/date_of_birth" />

                    <TextView
                        android:id="@+id/date_of_birthET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/membership_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/membership_validity" />

                    <TextView
                        android:id="@+id/membership_validityET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_Right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lin_Left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/email_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/email_id" />

                    <TextView
                        android:id="@+id/email_idET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/nricPassport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/nric_passport" />

                    <TextView
                        android:id="@+id/nricPassportET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/gender" />

                    <TextView
                        android:id="@+id/gender_radio_group"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="@string/address" />

                    <TextView
                        android:id="@+id/addressET"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/address"
                        android:gravity="top"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@id/email_idET" />
                </LinearLayout>
                <TextView
                    android:id="@+id/points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="0\nPoints"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gray_circular_button" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_header"
            android:layout_below="@+id/formScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_bg_bottom_left_right">

            <TextView
                android:id="@+id/transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/transactions"
                android:textColor="@color/header_bar_color_blue"
                android:textSize="@dimen/heading_textsize" />

            <LinearLayout
                android:id="@+id/head"
                android:layout_below="@+id/transaction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/small_textsize" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Amount (SGD)"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_textsize"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textsize"
                    android:textStyle="bold"
                    android:text="Order ID"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_textsize"
                    android:textStyle="bold"
                    android:text="Status"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:dividerHeight="1dp"

                android:divider="@color/gray_background_color"
                android:layout_below="@+id/head" />
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>
