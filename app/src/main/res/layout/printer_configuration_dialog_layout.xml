<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLL"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/horizontalSeperatorView"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/firstTV"
            android:textColor="@android:color/black"
            android:text="Master Printer IP" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/secondTV"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/black"
            android:text="Slave Printer IP" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/firstLL"
        android:id="@+id/secondLL"
        android:layout_marginBottom="6dp"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/firstET"
            android:singleLine="true"
            android:background="@drawable/gray_border_bg"
            android:padding="10dp" />


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginLeft="16dp"
            android:id="@+id/secondET"
            android:background="@drawable/gray_border_bg"
            android:singleLine="true"
            android:padding="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLL"
        android:id="@+id/customerDisplayTV"
        android:layout_marginBottom="6dp"
        android:textColor="@android:color/black"
        android:text="Customer Display" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/customerDisplayTV"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/thirdET"
            android:singleLine="true"
            android:background="@drawable/gray_border_bg"
            android:padding="10dp" />


    </LinearLayout>


</RelativeLayout>